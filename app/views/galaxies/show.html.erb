<div class="container-fluid" style="padding:3em;">
  <p id="notice"><%= notice %></p>
  <div class="row galaxy_show">
    <div class="col-md-4 col-xs-8 galaxy_details">
      <h3>Name:
        <%= @galaxy.name %></h3>
      <h4>Shape:
        <%=@galaxy.shape%></h4>
      <h4>Size:
        <%=@galaxy.size%>
        Light years wide.</h4>
      <h4>Star Systems:
        <%=@galaxy.stars.count%></h4>
      <div>
        <%= link_to 'Edit', edit_galaxy_path(@galaxy), class: "back"%>
        <%= link_to 'Delete', @galaxy, method: :delete, data: { confirm: 'Are you sure?' }, class:"delete" %>
      </div>
      <%=image_tag @galaxy.image_url%>
    </div>
    <div class="col-md-8 col-xs-8 star_show">
      <h3>
        Stars
        <%= link_to new_galaxy_star_path(@galaxy, @star), class:"star_add" do%> + <%end%>
      </h3>
    <% @galaxy.stars.each do |star| %>
      <div class="col-md-3 col-xs-6 star_tab">
        <%= link_to galaxy_star_path(@galaxy, star) do%>
        <div>
          <%=image_tag star.image_url%>
        </div>
        <h3><%= star.name %></h3>
        <h4>Planets:
          <%=star.planets.count%></h4>
      <%end%>
    </div>
  <%end%>
</div>
</div>
<br>
<%= link_to 'Back', galaxies_path, class:"back"%>
</div>
