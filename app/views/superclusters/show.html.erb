<div class="container">
  <div class="container">
    <div class="container">
      <h2>Galaxies located in the <%=@supercluster.name%> supercluster</h2>
      <% @galaxies.each do |galaxy| %>
      <%if galaxy.supercluster_id == @supercluster.id%>

        <div class="galaxy_main">
          <div class="galaxy_tab">
            <%= link_to galaxy do %>
            <%=image_tag galaxy.image_url :class => "image"%>
            <h3><%=galaxy.name%></h3>
          <%end%>
        </div>
      </div>

      <%else%>

        <h3>THIS LAMEASS SUPERCLUSTER HAS NO KNOWN GALAXIES</h3>

      <%end%>
    <% end %>
  </div>
</div>
<%= link_to 'Back', superclusters_path, class: "back" %>
</div>
