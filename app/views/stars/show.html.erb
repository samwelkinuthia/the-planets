<div class="container-fluid star_main">
  <p id="notice"><%= notice %></p>
  <div class="row star_intro" style="background: linear-gradient( rgba(14, 41, 69, 0.1), rgba(0, 0, 0, 0.1)), url(<%=@star.image_url.to_s%>); background-repeat: no-repeat; background-size:contain;  background-position: center;">
    <div>
      <%= link_to 'Back', galaxy_path(@star.galaxy_id), class:"back"%>
      <%= link_to 'Edit', edit_galaxy_star_path(@star.galaxy_id), class: "back"%>
      <%= link_to 'Delete', galaxy_star_path(@star), method: :delete, data: { confirm: 'Are you God?' }, class:"delete" %>
    </div>
    <div class="star_details">
      <span class="star_name">
        <h2>NAME</h2>
        <h4><%= @star.name %></h4>
      </span>
      <span class="star_classification">
        <h2>TYPE</h2>
        <h4><%=@star.classification%></h4>
      </span>
    </div>
  </div>
  <div class="row star_show">
    <h3>
      Planets
      <%= link_to new_galaxy_star_planet_path(@galaxy, @star), class:"star_add" do%>
      +
    <%end%>
  </h3>
  <%if !@planets.present?%>
    <h3>NO PLANETS HERE....YET</h3>
  <%else%>
    <% @planets.each do |planet| %>
      <div class="col-md-4 col-xs-12 star_tab">
        <%= link_to galaxy_star_planet_path(@galaxy, @star) do%>
        <div class="star_planet_tab">
          <div class="star_planet_img">
            <%#=image_tag planet.image_url%>
            </div>
            <div class="planet_details">
              <h4>Name:
                <%= planet.name %></h4>
              <h4>Category:
                <%= planet.category %></h4>
              <h4></h4>
            </div>
          </div>
        <%end%>
      </div>
    <%end%>
  <%end%>
</div>
</div>
